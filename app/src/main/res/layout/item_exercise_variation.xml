<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvVariationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Standard Push-up"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textSize="12sp"
                app:chipBackgroundColor="#4CAF50"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTargetMuscles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: Chest, Triceps"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment: None"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic push-up with hands shoulder-width apart"
            android:textSize="14sp"
            android:textColor="#424242"
            android:layout_marginTop="8dp" />

        <!-- Step-by-step Images Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpStepImages"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:tabBackground="@drawable/ic_person"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <!-- GIF Animation Display -->
        <ImageView
            android:id="@+id/ivAnimation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="Exercise animation" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Instructions"
            android:textSize="13sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Category Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                app:chipBackgroundColor="@color/gradient_purple_start" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHydration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timing" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIndian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian Diet" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWeightLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Loss" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle Gain" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Nutrition Tips RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>
